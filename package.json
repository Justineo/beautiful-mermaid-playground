{
  "name": "beautiful-mermaid-playground",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate:themes": "run-s generate:themes:raw generate:themes:format",
    "generate:themes:raw": "run-s generate:themes:official:raw generate:themes:unofficial:raw",
    "generate:themes:official:raw": "pnpm exec tsx scripts/generate-beautiful-themes.ts",
    "generate:themes:unofficial:raw": "pnpm exec tsx scripts/generate-unofficial-themes.ts",
    "generate:themes:format": "run-s generate:themes:official:format generate:themes:unofficial:format",
    "generate:themes:official:format": "oxfmt src/generated/beautifulThemes.ts",
    "generate:themes:unofficial:format": "oxfmt src/generated/unofficialThemes.ts",
    "sync:official-samples": "run-s sync:official-samples:raw sync:official-samples:format",
    "sync:official-samples:raw": "pnpm exec tsx scripts/sync-official-samples.ts",
    "sync:official-samples:format": "oxfmt src/data/officialSamples.ts",
    "dev": "run-s generate:themes dev:raw",
    "dev:raw": "vite",
    "build": "run-s generate:themes \"build:raw {@}\" --",
    "build:raw": "run-p type-check:raw \"build-only:raw {@}\" --",
    "preview": "vite preview",
    "build-only": "run-s generate:themes \"build-only:raw {@}\" --",
    "build-only:raw": "vite build",
    "prepare": "lefthook install",
    "type-check": "run-s generate:themes type-check:raw",
    "type-check:raw": "vue-tsc --build",
    "lint": "run-s lint:*",
    "lint:oxlint": "oxlint . --fix",
    "lint:eslint": "eslint . --fix --cache",
    "format": "oxfmt src/"
  },
  "dependencies": {
    "@shikijs/core": "3.23.0",
    "@shikijs/engine-javascript": "3.23.0",
    "@shikijs/langs": "3.23.0",
    "@shikijs/monaco": "3.23.0",
    "@shikijs/themes": "3.23.0",
    "@vueuse/core": "14.2.1",
    "beautiful-mermaid": "1.1.3",
    "lucide-vue-next": "^0.575.0",
    "monaco-editor": "0.55.1",
    "overlayscrollbars": "2.14.0",
    "shiki": "3.23.0",
    "vue": "3.6.0-beta.6"
  },
  "devDependencies": {
    "@kong-ui-public/monaco-editor": "0.12.0",
    "@tsconfig/node24": "^24.0.4",
    "@types/node": "^25.3.1",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/eslint-config-typescript": "^14.7.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "1.50.0",
    "eslint-plugin-vue": "~10.8.0",
    "lefthook": "2.1.1",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "8.0.0-beta.15",
    "vue-tsc": "^3.2.5"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
